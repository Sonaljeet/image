private static URI encodeUrl(String url) throws Exception {
    URI rawUri = new URI(url);

    URIBuilder builder = new URIBuilder()
            .setScheme(rawUri.getScheme())
            .setHost(rawUri.getHost())
            .setPath(rawUri.getPath());

    // Parse query if it exists
    String query = rawUri.getRawQuery();
    if (query != null) {
        String[] params = query.split("&");
        for (String param : params) {
            String[] pair = param.split("=");
            if (pair.length == 2) {
                builder.addParameter(pair[0], pair[1]);
            }
        }
    }

    return builder.build();
}
